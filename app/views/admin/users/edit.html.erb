<div class="container mt-3">
  <div class="row">
    <div class="col-md-7 offset-md-4 col-10 offset-2">
      <%= link_to admin_user_path(@user) do %>
        <i class="fa-solid fa-arrow-left" style="font-size: 1.5em;"></i>
      <% end %>
      <h2>編集</h2>
      <%=render "layouts/error_messages", object: @user %>
       <%=form_with model: [:admin, @user] do |f| %>
          <div class="field">
            <%= f.label :name, "名前" %><br />
            <%= f.text_field :name, autofocus: true, class: "w-50" %>
          </div>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "w-50" %>
          </div>
           <div class="field">
            <%= f.label :image, "画像" %><br />
            <%= f.file_field :image, accept: "image/*", class: "w-50" %>
          </div>
          <div class="actions">
            <%= f.submit "更新", class: "btn btn-outline-success mt-4 mb-4" %>
          </div>
          <%=link_to "退会はこちら", admin_user_path(@user), method: :delete, "data-confirm" => "本当に削除しますか？", style: "color: red;" %>
       <% end %>    
    </div>
  </div>
</div>     