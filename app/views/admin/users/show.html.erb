<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%=image_tag @user.get_profile_image(70,70),class: "rounded-circle" %>
      <%=@user.name %><br>
       <%=link_to "編集", edit_admin_user_path(@user), class: "btn btn-outline-success mt-2" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
     <div class="d-flex flex-wrap">
      <% @posts.each do |post| %>
       <div class="mx-2 mt-3 mypost_contents">
        <%=link_to admin_post_path(post) do %>
          <%=image_tag post.get_image(120,120) %></br>
        <% end %>
        <%=post.title %>
        <% if post.status==false %>
          <span style="color:red;"><i class="fa-solid fa-lock"></i></span>
        <% end %></br>
        <%=post.impression %></br>
        <%=post.created_at.strftime('%Y/%m/%d') %> 
       </div>     
      <% end %>
     </div> 
    </div>   
  </div>  
</div> 

