<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-2 mt-3 col-11 offset-1">
      <h3>Search for <%=@word %></h3>
       <% if @model=="false" %>
        <div class="d-flex flex-wrap mt-4">
         <% @posts.each do |post| %>
          <div class="mb-3 mr-md-5 mb-md-5 search-contents">
            <%=image_tag post.get_image(300,300) %></br></br>
            <%=link_to post.title, admin_post_path(post) %></br>
            <%=post.impression %></br>
            <%=post.created_at.strftime("%Y/%m/%d") %>
          </div>  
         <% end %>
        </div> 
       <% end %>   
       <% if @model=="true" %>
        <% @users.each do |user| %>
         <div class="d-flex mt-3"> 
          <%=image_tag user.get_profile_image(50,50), class: "rounded-circle" %>
          <p class="mx-4 mt-2"><%=link_to user.name, admin_user_path(user) %></p>
         </div>
        <% end %>
       <% end %> 
    </div>
  </div>
</div>