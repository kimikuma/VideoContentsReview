 <div class="container mt-3">
  <div class="row">
   <div class="col-md-4 offset-md-2 col-10 offset-2">
    <%= link_to admin_genres_path do %>
      <i class="fa-solid fa-arrow-left" style="font-size: 1.5em;"></i>
    <% end %>
    <h2 class="mb-4"><i class="fa-solid fa-pen"></i>edit</h2>
    <%=render "layouts/error_messages", object: @genre %>
    <%=form_with model: [:admin, @genre] do |f| %>
      <%=f.text_field :name %><br>
      <%=f.submit "更新", class: "btn btn-outline-success mt-3 mb-3" %><br>
    <% end %>  
    <%=link_to "削除はこちら", admin_genre_path(@genre), method: :delete, "data-confirm" => "本当に削除しますか？", style: "color: red;" %>
   </div>
  </div>
 </div>   