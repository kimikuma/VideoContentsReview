<div class="container mx-auto mt-3">
  <div class="row">
    <div class="col-md-7 offset-md-3 col-10 offset-2">
     
      <h2 class="devise-image">Sign up</h2>
         <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/flash_messages", resource: resource %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "eiga@sample.com", class: "w-50" %>
          </div>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, placeholder: "映画太郎", class: "w-50" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "w-50" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-50" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-outline-success mt-4" %>
          </div>
        <% end %>
       <%= render "public/shared/links" %> 
    </div>
  </div>
</div> 