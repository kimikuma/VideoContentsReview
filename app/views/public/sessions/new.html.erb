<div class="container mx-auto mt-3">
  <div class="row">
    <div class="col-md-7 offset-md-3 col-10 offset-2">
      <h2 class="devise-image">Log in</h2>

      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <%= render "public/shared/flash_messages", resource: resource %>
       <%= render "public/shared/error_messages", resource: resource %> 
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "eiga@example.com", class: "w-50 " %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-50" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-primary mt-4" %>
        </div>
      <% end %>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>